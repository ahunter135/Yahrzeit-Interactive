{
  "manifest_version": 3,
  "name": "Yahrzeit Interactive Kiosk Extension",
  "version": "3.2.2",
  "description": "Get's asset id for enterprise progressive web app (PWA)",

  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "offline_enabled": true,
  "externally_connectable": {
      "accepts_tls_channel_id": false,
      "matches": [ "https://www.yahrzeitinteractive.com/*", "http://127.0.0.1/*" ]
  },
  "content_scripts": [
      {
          "matches": ["http://127.0.0.1/*", "https://www.yahrzeitinteractive.com/*"],
          "js": ["scripts/content.js"],
          "run_at": "document_start"
      }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "activeTab", "storage", "enterprise.deviceAttributes"]
}
